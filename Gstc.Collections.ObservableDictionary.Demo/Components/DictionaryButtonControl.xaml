<UserControl x:Class="Gstc.Collections.ObservableDictionary.Demo.Components.DictionaryButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gstc.Collections.ObservableDictionary.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1200"
             DataContext="{Binding Path=CustomerVm, RelativeSource={RelativeSource Self}}"
             >
    <StackPanel Orientation="Horizontal" Height="40px">
        <Button Padding="5" Margin="5" Command="{Binding AddItemCommand}">Add Item</Button>
        <Button Padding="5" Margin="5" Command="{Binding RemoveItemCommand}">Remove Item</Button>
        <Button Padding="5" Margin="5" Command="{Binding ReplaceItemCommand}">Replace Item</Button>
        <Button Padding="5" Margin="5" Command="{Binding ClearItemsCommand}">Clear All</Button>
        <Button Padding="5" Margin="5" Command="{Binding ReplaceItemsCommand}">Replace All</Button>
        <Button Padding="5" Margin="5" Command="{Binding ReplaceDictCommand}">Replace Internal Dictionary</Button>
    </StackPanel>
</UserControl>
