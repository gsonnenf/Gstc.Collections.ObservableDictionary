<UserControl x:Class="Gstc.Collections.ObservableDictionary.Demo.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gstc.Collections.ObservableDictionary.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Width="550px" ItemsSource="{Binding BindingList, RelativeSource={RelativeSource AncestorType=UserControl}}" Name="CustomerListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="Num" DisplayMemberBinding="{Binding Path=Num}" />
                    <GridViewColumn Width="100" Header="NumString" DisplayMemberBinding="{Binding Path=NumString}" />
                    <GridViewColumn Width="100" Header="Last" DisplayMemberBinding="{Binding Path=Value.LastName}" />
                    <GridViewColumn Width="150" Header="Dob" DisplayMemberBinding="{Binding Path=Value.BirthDate, StringFormat=yyyy-MM-dd}" />
                    <GridViewColumn Width="150" Header="PurchaseAmount" DisplayMemberBinding="{Binding Path=Value.PurchaseAmount}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
